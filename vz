
case $1 in
 stop)
  OPER1="stop"
  ;;
 start)
  OPER1="start"
  ;; 
 restart)
  OPER1="stop"
  OPER2="start"
  ;;
 destroy)
  OPER1="destroy"
  ;;
 clean)
  OPER1="stop"
  OPER2="destroy"
esac 

sctid=`echo $2 | cut -d'-' -f1`
ectid=`echo $2 | cut -d'-' -f2`
while [ "$sctid" \< "$ectid" ] ; do
 echo $sctid
 vzctl $OPER1 $sctid
 if [ "$OPER2" != "" ] ; then
    vzctl $OPER2 $sctid
    sleep 10
 fi
 sctid=`expr $sctid + 1`
done
